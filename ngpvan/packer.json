{
  "variables": {
    "aws_access_key": "",
    "aws_secret_key": ""
  },
  "builders": [{
    "type": "amazon-ebs",
    "access_key": "{{user `aws_access_key`}}",
    "secret_key": "{{user `aws_secret_key`}}",
    "region": "us-east-1",
    "source_ami": "ami-de0d9eb7",
    "instance_type": "m1.small",
    "ssh_username": "ubuntu",
    "ami_name": "congress-forms {{timestamp}}"
  }],  
  "provisioners": [{
    "type": "shell",
    "inline": [
      "sudo mkdir -m 777 /congress-forms/"
    ]
  },
  {
	"type": "file",
	"source": "../",
	"destination": "/congress-forms"
  },
  {
    "type": "shell",
    "scripts": [
      "packer_setup.sh"
    ]
  }
  ]
}