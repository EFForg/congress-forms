# -*- mode: ruby -*-
# vi: set ft=ruby :

VAGRANTFILE_API_VERSION = "2"

Vagrant.configure(VAGRANTFILE_API_VERSION) do |config|
  config.vm.box = "dummy"
  config.vm.box_url = "https://github.com/mitchellh/vagrant-aws/raw/master/dummy.box"
  config.vm.provider :aws do |aws, override|
    aws.access_key_id = ENV['AWS_ACCESS_KEY']
    aws.secret_access_key = ENV['AWS_SECRET_KEY']
    aws.keypair_name = "congress-forms"
    aws.ami = "ami-b08b6cd8"
	aws.security_groups = "congress-forms"
	aws.instance_type = "t1.micro"
	
    override.ssh.username = "ubuntu"
    override.ssh.private_key_path = "/etc/ssh/congress-forms.pem"
  end
  config.vm.provision :shell, :path => "setup_dev.sh", :args => "ubuntu"
  config.vm.provision :shell, :path => "./packer_deployment/service_setup.sh"
  config.vm.network "forwarded_port", guest: 9292, host: 9292
end
